<p id="notice"><%= notice %></p>

<h1>Serie Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @serie_reviews.each do |serie_review| %>
      <tr>
        <td><%= serie_review.content %></td>
        <td><%= link_to 'Show', serie_review %></td>
        <td><%= link_to 'Edit', edit_serie_review_path(serie_review) %></td>
        <td><%= link_to 'Destroy', serie_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

