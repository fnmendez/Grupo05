<% provide :title, 'Editing a story' %>
<h1>Editing a story</h1>
<div class="divider"></div>
<%= form_for @story, url: {controller: :stories, action: :update}, as: :story do |f| %>
    <div class="input-field">
      <%= f.label :title, 'Title:' %>
      <%= f.text_field :title %>
    </div>
    <div class="input-field">
      <%= f.label :content, 'Content:' %>
      <%= f.text_area :content %>
    </div>
    <div class="input-field">
      <%= f.label :date, 'Date:' %>
      <%= f.date_select :date %>
    </div>
    <div class="submit-button">
      <%= f.submit "Edit story" %>
    </div>
<% end %>