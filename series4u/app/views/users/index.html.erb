<h1>Users</h1>
<table>
  <thead>
  <tr>
    <th>
      Username
    </th>
    <th>
      Full Name
    </th>
    <th>
      Description
    </th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <% if user != current_user %>
          <tr>
            <td>
              <%= user.username %>
            </td>
            <td>
              <%= user.full_name %>
            </td>
            <td>
              <%= user.description %>
            </td>
            <td>
              <%= link_to 'Delete Account', destroy_users_path(user_id: user.id), method: :delete, class: "button-primary" %>
            </td>
            <td>
              <%= link_to 'Promote to Admin',  %>
            </td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
