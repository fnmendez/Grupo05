<h1>Users</h1>
<table>
  <thead>
  <tr>
    <th>
      Username
    </th>
    <th>
      Full Name
    </th>
    <th>
      Description
    </th>
    <th>
      Admin?
    </th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <% if user != current_user %>
          <tr>
            <td>
              <%= user.username %>
            </td>
            <td>
              <%= user.full_name %>
            </td>
            <td>
              <%= user.description %>
            </td>
            <td>
              <%= user.is_admin? ? 'Yes': 'No' %>
            </td>
            <% unless user.is_admin? %>
              <td>
                <%= link_to 'Delete Account', destroy_users_path(user_id: user.id), method: :delete, class: "button-primary" %>
              </td>
            <% end %>
            <% if !user.is_admin? && !user.is_kid? %>
              <td>
                <%= link_to 'Promote to Admin', promote_user_path(id: user.id) %>
              </td>
            <% end %>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
