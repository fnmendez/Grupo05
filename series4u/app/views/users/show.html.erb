<h1 align="center"><%= current_user.full_name %>'s profile</h1>
<% if current_user.is_kid? %>
  <h2 align="center"> <%= current_user.parent.full_name %>'s Kid account </h2>
<% end %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Username</h3>
  </div>
  <div class="panel-body">
    <%= current_user.username %>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title">Email</h3>
  </div>
    <div class="panel-body">
    <%= current_user.email %>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title">Full name</h3>
  </div>
    <div class="panel-body">
    <%= current_user.full_name.nil? ? 'Not specified' : current_user.full_name %>
  </div>
  <div class="panel-heading">
    <h3 class="panel-title">Description</h3>
  </div>
    <div class="panel-body">
    <%= current_user.description.nil? ? 'Not specified' : current_user.description %>
  </div>
</div>

<div><%= link_to "Edit profile", edit_user_registration_path %></div>

<% unless current_user.is_kid? %>
    <div><%= link_to "Manage kids", kids_path %></div>
<% end %>