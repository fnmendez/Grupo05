<p id="notice"><%= notice %></p>

<h1>Chapter Reviews</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapter_reviews.each do |chapter_review| %>
      <tr>
        <td><%= link_to 'Show', chapter_review %></td>
        <td><%= link_to 'Edit', edit_chapter_review_path(chapter_review) %></td>
        <td><%= link_to 'Destroy', chapter_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chapter Review', new_chapter_review_path %>
