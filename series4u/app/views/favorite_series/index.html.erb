<h1>Favorite Series</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_series.each do |favorite_series| %>
      <tr>
        <td><%= link_to 'Show', favorite_series %></td>
        <td><%= link_to 'Edit', edit_favorite_series_path(favorite_series) %></td>
        <td><%= link_to 'Destroy', favorite_series, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

