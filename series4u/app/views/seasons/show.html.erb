<p id="notice"><%= notice %></p>


<div class="panel panel-default">
  <div class="panel-heading"><h1><%= @season.serie.title %>: Season <%= @season.number %></h1></div>
  <div class="panel-body">
    <div class="serie-atrib">
      Release date: <%= @season.release_date %>
    </div>
    </div>
    </div>


<% if user_signed_in? && (current_user.is_admin? || @season.serie.user == current_user) %>
  <%= link_to 'Edit', edit_season_path(@season) %> |
  <%= link_to 'Destroy', @season, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<p>
  <h2>Chapters: </h2>
  <% if @season.chapters.exists? %>
    <table class='table'>
      <thead>
        <tr>
          <th>
            nÂ°
          </th>
          <th>
            Title
          </th>
          <th>
            Summary
          </th>
          <th>
            Added by
          </th>
        </tr>
      </thead>

      <tbody>
        <% @n = 1 %>
        <% @season.chapters.each do |chapter| %>
          <tr>
            <td><%= @n %></td>
            <td><%= chapter.title %></td>
            <td><%= chapter.summary %></td>
            <td><%= chapter.user.username %></td>
            <td><%= link_to 'Show', chapter %></td>
          </tr>
          <%@n = @n + 1%>
        <% end %>
      </tbody>
    </table>
  <% end %>
</p>

<div>
<% if user_signed_in? && (current_user.is_admin? || @season.serie.user == current_user) %>
  <%= link_to 'New Chapter', new_season_chapter_path(@season) %>
<% end %>
</div>
<%= link_to 'Back', @season.serie %>

