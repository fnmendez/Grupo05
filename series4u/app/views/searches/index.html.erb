<% provide :title, 'Advanced' %>
<h1 align="center" id="search-title">Advanced Search</h1>
<%= form_tag results_path, method: 'get', class: 'form-horizontal', align: "center" do %>
  <div class="form-group">
    <label class="control-label col-sm-2" for="title"">Title keyword:</label>
    <div class="col-sm-10">
      <%= text_field_tag :title, params[:title], placeholder: 'Introduzca título', size: "75" %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="genre">Genre:</label>
    <div class="col-sm-10">
      <%= text_field_tag :genre, params[:genre], placeholder: 'Introduzca género', size: "75" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      	<%= button_tag(type: "submit", class: "btn btn-primary btn-lg", margin:'auto', :name => nil) do %>
	Search
	<% end %>
    </div>
  </div>
<% end %>