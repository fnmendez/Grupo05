<% provide :title, 'Welcome' %>
<h1 align="center" id="results-title"> <%= @series.blank? %></h1>
<div class="divider"></div>
<h2 id="results-title"> Series </h2>
<ul class="list-group" id='stories'>
 	<%if @series.blank?%>
  		<h4> No series found.</h4>
	<%else%>
		<% @series.each do |s| %>
			<li class="list-group-item"><%= link_to s.title, series_path(s) %></li>
  		<% end %>
  	<% end %>
 </ul>
 <h2 id="results-series-title"> Chapters </h2>
 <ul class="list-group" id='stories'>
  	<%if @chapters.blank? %>
  		<h4>No chapters found.</h4>
	<%else%>
		<% @chapters.each do |s| %>
			<li class="list-group-item"><%= link_to s.title, chapter_path(s) %></li>
		<% end %>
	<% end %>	
</ul>

